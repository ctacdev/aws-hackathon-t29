<h1>Historical Caps</h1>

<table class="table">
  <thead>
    <tr>
      <th>Data</th>
      <th>Created At</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @historical_caps.each do |historical_cap| %>
      <tr>
        <td><%= historical_cap.data %></td>
        <td><%= historical_cap.created_at %></td>
        <td><%= link_to 'Show', historical_cap_path(historical_cap,format: :xml), :target => "_blank" %></td>
        <% if current_user %>
          <td><%= link_to 'Resend', resend_historical_cap_path(historical_cap) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
